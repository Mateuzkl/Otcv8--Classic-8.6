NonClosableMiniWindow
  height: 50
  id: sideButtonsWindow
  @onClose: modules.game_inventory.onMiniWindowClose()
  &save: true
  &autoOpen: 3

  NonClosableMiniWindowContents
    InventoryButton
      id: skillsButton
      !text: tr('Skills')
      anchors.left: parent.left
      anchors.top: parent.top
      margin-top: 4
      margin-left: 5
      width: 34
      height: 20
      @onClick: modules.game_skills.toggle()
    
    InventoryButton
      id: battleButton
      !text: tr('Battle')
      anchors.left: prev.right
      anchors.top: prev.top
      margin-left: 4
      margin-top: 0
      width: 34
      height: 20
      @onClick: modules.game_battle.toggle()

    InventoryButton
      id: vipButton
      !text: tr('VIP')
      anchors.left: prev.right
      anchors.top: prev.top
      margin-left: 4
      margin-top: 0
      height: 20
      width: 34
      @onClick: modules.game_viplist.toggle()

    InventoryButton
      id: logoutButton
      !text: tr('Logout')
      anchors.left: prev.left
      anchors.top: prev.top
      anchors.left: prev.right
      margin-left: 9
      width: 42
      height: 20
      margin-top: 0
      @onClick: modules.game_interface.tryLogout()

    InventoryButton
      id: exphButton
      !text: tr('XP/H')
      anchors.left: parent.left
      anchors.top: prev.bottom
      margin-left: 5
      margin-top: 4
      height: 20
      width: 34
      @onClick: modules.game_huntanalyzer.toggle()

    InventoryButton
      !text: tr('Shop')
      anchors.left: logoutButton.left
      anchors.top: logoutButton.bottom
      anchors.right: logoutButton.right
      width: 42
      height: 20
      margin-top: 3
      @onClick: modules.game_shop.show()

